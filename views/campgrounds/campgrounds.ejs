<%- include('../partials/header') %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Restaurantly!</h1>
            <p>View our hand-picked Restaurants from all over India.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Restaurant</a>
            </p>
         </div>
    </header>
    <div class="row text-center" class="t01" style="display: flex;flex-wrap:wrap;">
        <% for(var i=0;i<campgrounds.length;i++){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campgrounds[i].image %>" style="height:150px;width:250px;">
                <div class="caption">
                    <h3><%= campgrounds[i].name %></h3>
                </div>
                <a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-primary">More info</a>
            </div>
        </div>
        <% } %>        
    </div>
    
</div>
<%- include('../partials/footer') %>